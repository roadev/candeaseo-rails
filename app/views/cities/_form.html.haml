= form_with(model: city, local: true) do |f|
  %div.row
    %div.col-md-6.form-group
      = f.label :name, "Nombre", class: "form-label"
      = f.text_field :name, class: "form-control", placeholder: "Ingrese el nombre de la ciudad"

    %div.col-md-6.form-group
      = f.label :state_id, "Estado", class: "form-label"
      = f.collection_select :state_id, State.all, :id, :name, { prompt: "Seleccione un estado" }, class: "form-control"

  %div.row.mt-3
    %div.col-md-6.form-group
      = f.label :country_id, "País", class: "form-label"
      = f.collection_select :country_id, Country.all, :id, :name, { prompt: "Seleccione un país" }, class: "form-control"

    %div.col-md-6.form-check
      = f.check_box :active, class: "form-check-input"
      = f.label :active, "Activo", class: "form-check-label"

  %div.mt-3
    = f.submit "Guardar", class: "btn btn-primary"
    = link_to "Cancelar", cities_path, class: "btn btn-secondary ml-2"
