= form_with(model: neighborhood, local: true) do |f|
  - if neighborhood.errors.any?
    %div.alert.alert-danger
      %h4= "#{pluralize(neighborhood.errors.count, 'error')} encontrado(s):"
      %ul
        - neighborhood.errors.full_messages.each do |message|
          %li= message

  %div.form-group
    = f.label :name, "Nombre", class: "form-label"
    = f.text_field :name, class: "form-control", placeholder: "Ingrese el nombre"

  %div.form-group
    = f.label :description, "Descripción", class: "form-label"
    = f.text_area :description, class: "form-control", placeholder: "Ingrese una descripción"

  %div.form-group
    = f.label :township_id, "Municipio", class: "form-label"
    = f.collection_select :township_id, Township.all, :id, :name, { prompt: "Seleccione un municipio" }, class: "form-control"

  %div.form-group
    = f.label :active, "Activo", class: "form-label"
    = f.check_box :active

  %div.mt-3
    = f.submit class: "btn btn-primary"
