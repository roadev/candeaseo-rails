= form_with(model: township, local: true) do |f|
  - if township.errors.any?
    %div.alert.alert-danger
      %h4= "#{pluralize(township.errors.count, 'error')} encontrado(s):"
      %ul
        - township.errors.full_messages.each do |message|
          %li= message

  %div.form-group
    = f.label :name, "Nombre", class: "form-label"
    = f.text_field :name, class: "form-control", placeholder: "Ingrese el nombre"

  %div.form-group
    = f.label :description, "Descripción", class: "form-label"
    = f.text_area :description, class: "form-control", placeholder: "Ingrese una descripción"

  %div.form-group
    = f.label :city_id, "Ciudad", class: "form-label"
    = f.collection_select :city_id, City.all, :id, :name, { prompt: "Seleccione una ciudad" }, class: "form-control"

  %div.form-group
    = f.label :active, "Activo", class: "form-label"
    = f.check_box :active

  %div.mt-3
    = f.submit class: "btn btn-primary"
