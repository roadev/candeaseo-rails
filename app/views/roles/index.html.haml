%h1.text-center.mt-4 Listado de Roles

%div.table-responsive
  %table.table.table-bordered.table-striped
    %thead.thead-dark
      %tr
        %th Nombre
        %th Descripción
        %th Activo
        %th Acciones

    %tbody
      - @roles.each do |role|
        %tr
          %td= role.name
          %td= role.description
          %td= role.active ? "Sí" : "No"
          %td
            = link_to 'Ver', role, class: 'btn btn-sm btn-primary'
            = link_to 'Editar', edit_role_path(role), class: 'btn btn-sm btn-warning mx-2'
            = link_to 'Eliminar', role, method: :delete, data: { confirm: '¿Estás seguro?' }, class: 'btn btn-sm btn-danger'

%div.mt-4
  = link_to 'Nuevo Rol', new_role_path, class: 'btn btn-success'
