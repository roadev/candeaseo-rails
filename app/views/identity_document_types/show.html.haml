%h1.text-center.mt-4 Detalle del Tipo de Documento de Identidad

%div.card.shadow.mt-4
  %div.card-header.bg-primary.text-white
    Detalles
  %div.card-body
    %p
      %strong Nombre:
      = @identity_document_type.name
    %p
      %strong Nombre Corto:
      = @identity_document_type.short_name
    %p
      %strong Orden de Visualización:
      = @identity_document_type.display_order
    %p
      %strong Activo:
      = @identity_document_type.active ? "Sí" : "No"

%div.mt-4
  = link_to 'Editar', edit_identity_document_type_path(@identity_document_type), class: 'btn btn-warning btn-sm'
  = link_to "Eliminar", @identity_document_type, method: :delete, data: { turbo_method: "delete", confirm: "¿Estás seguro?" }, class: "btn btn-danger btn-sm"
  = link_to 'Volver', identity_document_types_path, class: 'btn btn-secondary btn-sm ml-2'

