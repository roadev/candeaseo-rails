%h1.text-center.mt-4 Listado de Tipos de Documento de Identidad

%div.table-responsive
  %table.table.table-bordered.table-striped
    %thead.thead-dark
      %tr
        %th Nombre
        %th Nombre Corto
        %th Orden de Visualización
        %th Activo
        %th Acciones

    %tbody
      - @identity_document_types.each do |identity_document_type|
        %tr
          %td= identity_document_type.name
          %td= identity_document_type.short_name
          %td= identity_document_type.display_order
          %td= identity_document_type.active ? "Sí" : "No"
          %td
            = link_to 'Ver', identity_document_type, class: 'btn btn-primary btn-sm'
            = link_to 'Editar', edit_identity_document_type_path(identity_document_type), class: 'btn btn-warning btn-sm mx-2'
            = link_to "Eliminar", identity_document_type_path(identity_document_type), method: :delete, data: { turbo_method: "delete", confirm: "¿Estás seguro?" }, class: "btn btn-danger btn-sm"


%div.mt-4
  = link_to 'Nuevo Tipo de Documento de Identidad', new_identity_document_type_path, class: 'btn btn-success'
