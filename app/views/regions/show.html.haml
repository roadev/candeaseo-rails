%h1.text-center.mt-4 Detalle de la Región

%div.card.shadow.mt-4
  %div.card-header.bg-primary.text-white
    Detalles
  %div.card-body
    %p
      %strong Nombre:
      = @region.name
    %p
      %strong Descripción:
      = @region.description
    %p
      %strong Creado Por:
      = @region.created_by
    %p
      %strong Activo:
      = @region.active ? "Sí" : "No"

%div.mt-4
  = link_to 'Editar', edit_region_path(@region), class: 'btn btn-warning'
  = link_to 'Eliminar', @region, method: :delete, data: { confirm: '¿Estás seguro?' }, class: 'btn btn-danger ml-2'
  = link_to 'Volver', regions_path, class: 'btn btn-secondary ml-2'
